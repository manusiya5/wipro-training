<!DOCTYPE html>
<html>
<head>
  <title>Inventory</title>
  <style>
    table {
      border-collapse: collapse;
      width: 60%;
    }
    th, td {
      border: 1px solid black;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>

  <h2>Products</h2>

  <table>
    <tr>
      <th>Product Name</th>
      <th>Price</th>
    </tr>

    <% products.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
      </tr>
    <% }) %>

  </table>

</body>
</html>
